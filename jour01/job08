from math import *
class Cercle:
    def __init__(self, rayon):
        self.donner_rayon = rayon
    
    def changerRayon(self):
        print("Le rayon est maintenant de", self.donner_rayon)   

    def afficherInfos(self, n_rayon):
        print("Rayon :", self.donner_rayon)
        self.donner_rayon = n_rayon
        self.circonference()
        self.aire()
        self.diametre()
        
    def circonference(self):
        a = self.donner_rayon
        resultat = a * 2 *pi
        print("Circonférence :", resultat)

    def aire(self):
        rayon_carre = self.donner_rayon * self.donner_rayon
        print("Aire :", rayon_carre * pi)

    def diametre(self):
        print("Diamètre :", self.donner_rayon + self.donner_rayon)

cercle1 = Cercle(4)
cercle1.changerRayon(4)

cercle2 = Cercle(7)
cercle2.changerRayon(7)